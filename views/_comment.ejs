<li id="comment-<%= comment.id %>">
    <p>
        <% if((locals.user) && (locals.user.id == comment.user.id)){ %>
            <small>
                <a class="delete-comment-button" href="/comments/destroy/<%= comment.id %>"> X </a>
            </small>
            <% } %>
        <%= comment.content %>
        <br>
        <small>
            <%= comment.user.email %>
        </small>

        <small>
            <% if(locals.user){%>
                <a href="/likes/toggle/?id=<%=comment.id%>&type=Comment" class="toggle-like-button" data-likes="<%= comment.likes.length%>">
                    <%= comment.likes.length %> Likes
                </a>
            <%}else{%>
                <%= comment.likes.length %> Likes
            <%}%>
        </small>
    </p>
</li>